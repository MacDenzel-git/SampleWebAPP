                                                        }
                                                        else
                                                        {
                                                            <div class="post-text"> @Html.Raw(item.Article)</div>
                                                        }

                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>
        <div class="row row-40 justify-content-xxl-between">
            <div class="col-12">
