@model projectWebApplication.DTOs.QouteDTO

@{
    ViewData["Title"] = "AddQoute";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-11 ml-5">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Add Sermon</h4>
            </div>
           
                    @if (Model.OutputHandler.IsErrorOccured)
                    {
                        <p>@Model.OutputHandler.Message</p>
                    }
            
            <div class="card-body">
                <form asp-action="AddQoute" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="QouteText" class="control-label">Qoute Text</label>
                        <input asp-for="QouteText" class="form-control" />
                        <span asp-validation-for="QouteText" class="text-danger"></span>
                    </div>

                    <div class="form-group p-2">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsPublished" /> @Html.DisplayNameFor(model => model.IsPublished)
                        </label>
                    </div>
                    <div class="form-group p-2">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsFeaturedOnHomePage" /> @Html.DisplayNameFor(model => model.IsFeaturedOnHomePage)
                        </label>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <label for="file">Artwork:</label>
                            <input type="file" name="artwork" id="artwork" accept="image/*" required />
                        </div>
                        <div class="col-lg-6">

                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <div class="">
                            <a class="btn btn-raised btn-success btn-sm" asp-action="ManageQoutes" asp-controller="Quote">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>

</div>

<div>
    <br />

</div>

