@model projectWebApplication.ViewModels.TestimonyVM

@{
    ViewData["Title"] = "ManageTestimonies";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-11 ml-5">
        <div class="outer-div">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">All Testimonies </h4>
                </div>
                <div class="card-body">
                    <div class="row text-right">
                        <div class="col-md-12 text-right">
                            <a class="btn btn-raised btn-success" asp-action="AddTestimony" asp-controller="Testimonies">Add Testimony</a>
                            @if (Model.OutputHandler.IsErrorOccured)
                            {
                                <p style="float: left;color: red;font-weight: bold;">@Model.OutputHandler.Message</p>
                            }
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div>

                                <div class="body">
                                    <div class="table-responsive">
                                        <table id="example" class="display table-bordered">
                                            <thead>
                                                <tr>
                                                    
                                                    <th>
                                                    Testifier Name
                                                    </th>
                                                    <th>
                                                      Testimony Heading
                                                    </th>
                                                    
                                                    <th>
                                                        Published
                                                    </th>
                                                    <th>
                                                     Testimony Date
                                                    </th>
                                                  
                                                    <th>Storage Size</th>  <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Testimonies)
                                                {
                                                    <tr>
                                                        
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.TestifierName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.TestimonyHeading)
                                                        </td>
                                                         
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.IsPublished)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.TestimonyDate)
                                                        </td><td>
                                                            @Html.DisplayFor(modelItem => item.StorageSize)
                                                        </td>
                                                       
                                                        <td>
                                                            @Html.ActionLink("Edit", "UpdateTestimony", new { testimonyId = item.TestimonyId }) |
                                                            <a onclick="ConfirmFunction(@item.TestimonyId)">Delete</a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-raised btn-success btn-sm" asp-action="ManageTestimonies" asp-controller="Qoute">Refresh</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>

</div>

